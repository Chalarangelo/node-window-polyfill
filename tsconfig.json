{
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "jest",
      "node-window-polyfill"
    ],
    "lib": [
      "es2017"
    ],
    "strictNullChecks": true,
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true
  }
}
